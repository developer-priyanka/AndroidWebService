<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.assignment.androidwebservice.MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/citycountrytxt"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:gravity="center_horizontal" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updatetxt"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/citycountrytxt"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/temptxt"
            android:layout_below="@+id/updatetxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desctxt"
            android:layout_below="@+id/temptxt"
            android:layout_alignParentEnd="true"
            android:gravity="left"
            android:layout_marginTop="20dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/humiditytxt"
            android:layout_alignBottom="@+id/desctxt"

            android:gravity="left"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pressuretxt"
            android:layout_below="@+id/desctxt"
            android:layout_alignParentStart="true"

            android:textStyle="normal|bold"
            android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:layout_below="@+id/desctxt"
        android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="70sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
